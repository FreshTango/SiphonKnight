<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.siphonknight.fight"
    android:background="@drawable/grassfield">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Boss HP:"/>
    <TextView
        android:id="@+id/bossHealthVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:text="0"/>
    <ProgressBar
        android:id="@+id/bossHealthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="0"
        android:progressBackgroundTint="@color/colorPrimaryDark" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="75dp"
        android:textSize="15dp"
        android:text="ATK:"/>
    <TextView
        android:id="@+id/attackVal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="140dp"
        android:textSize="25dp"
        android:text="0"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="225dp"
        android:textSize="15dp"
        android:text="DEF:"/>
    <TextView
        android:id="@+id/defenseVal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="290dp"
        android:textSize="25dp"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="30dp"
        android:text="HP:"/>
    <TextView
        android:id="@+id/playerHealthVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="120dp"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="150dp"
        android:text="Boss Level: "/>
    <TextView
        android:id="@+id/bossLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="250dp"
        android:text="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:text="Player Level: "/>
    <TextView
        android:id="@+id/playerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"
        android:text="1"/>
    <ProgressBar
        android:id="@+id/playerHealthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="500dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="0"
        android:progressBackgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/attackButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        android:text="ATTACK"
        android:textSize="10dp" />

    <Button
        android:id="@+id/defenseButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="550dp"
        android:text="DEFEND"
        android:textSize="10dp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="595dp"
        android:text="RESET BOSS RUSH"
        android:textSize="10dp" />
</RelativeLayout>
